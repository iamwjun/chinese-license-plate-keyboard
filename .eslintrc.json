{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [ "google", "eslint:recommended", "plugin:react/recommended" ],
    "settings": {
        "react": {
            "pragma": "React",
            "version": "16.8.3"
        }
    },
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/jsx-uses-react": 2,
        "linebreak-style": ["error", "windows"],
        "require-jsdoc": 0,
        "no-invalid-this": 0
    },
    "parser": "babel-eslint"
}